<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SavingActivity.SavingActivity"
    android:background="@color/background"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="match_parent"
            android:layout_height="132dp"
            android:columnCount="3"
            android:rowCount="1">

            <Button
                android:id="@+id/gotosavingC"
                android:layout_width="149dp"
                android:layout_height="112dp"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:background="@color/transparent"
                android:text="Saving Categories"
                android:textColor="@color/blue"
                android:textStyle="bold" />

            <Button
                android:id="@+id/gotoexpensesC"
                android:layout_width="156dp"
                android:layout_height="match_parent"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:text="Expenses Categories"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:background="@color/transparent"/>
        </GridLayout>

        <Button
            android:id="@+id/createE"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@color/transparent"
            android:text="Create Expenses Item Categories here"
            android:textColor="@color/blue"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tvExpenses"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="344dp" />


    </LinearLayout>

</RelativeLayout>